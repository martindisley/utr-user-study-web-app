# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# OpenRouter API Key (required for Llama 3.2 model access)
# Get your API key from: https://openrouter.ai/keys
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Ollama Configuration (required for UnlearningToRest model)
# Make sure Ollama is running locally with the unlearning-to-rest model
OLLAMA_HOST=http://localhost:11434

# Hugging Face API Token (optional, for other models if needed)
# Get your token from: https://huggingface.co/settings/tokens
HUGGINGFACE_API_TOKEN=your_huggingface_token_here
HUGGINGFACE_ENDPOINT=your_huggingface_endpoint_url_here

# Replicate API Token (required for image generation)
# Get your token from: https://replicate.com/account/api-tokens
REPLICATE_API_TOKEN=your_replicate_api_token_here

# Flask Configuration
DEBUG=False
SECRET_KEY=dev-secret-key-change-in-production
PORT=5000

# CORS Configuration (for production, set to your Netlify URL)
CORS_ORIGINS=*

# Logging
LOG_LEVEL=INFO
